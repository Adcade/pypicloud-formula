[app:main]
use = egg:pypicloud

pyramid.reload_templates = False
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en

pypi.storage = s3
storage.access_key = {{ s3_key }}
storage.secret_key = {{ s3_secret }}
storage.bucket = {{ s3_bucket }}

db.url = sqlite:///%(here)s/db.sqlite

auth.admins =
  {{ admin }}

user.{{ admin }} = {{ password }}

# For beaker
session.encrypt_key = {{ encrypt_key }}
session.validate_key = {{ validate_key }}
session.secure = True

###
# wsgi server configuration
###

[uwsgi]
paste = config:%p
paste-logger = %p
socket = 127.0.0.1:{{ uwsgi_port }}
master = true
processes = 20
reload-mercy = 15
worker-reload-mercy = 15
max-requests = 1000
enable-threads = true
virtualenv = {{ virtualenv_path }}/bin/..

###
# logging configuration
# http://docs.pylonsproject.org/projects/pyramid/en/latest/narr/logging.html
###

[loggers]
keys = root

[handlers]
keys = file

[formatters]
keys = generic

[logger_root]
level = WARN
handlers = file

[handler_file]
class = handlers.RotatingFileHandler
args = ('{{ log_file }}', 'mode=a', 'maxBytes=1000000', 'backupCount=5')
level = NOTSET
formatter = generic

[formatter_generic]
format = %(levelname)s %(asctime)s [%(name)s] %(message)s‚èé
